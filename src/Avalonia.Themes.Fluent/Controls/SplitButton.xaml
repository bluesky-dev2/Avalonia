  </Style>
  <Style Selector="SplitButton:checked-primary-pointerover /template/ Path#DropDownGlyphPath">
    <Setter Property="Fill" Value="{DynamicResource SplitButtonForegroundChecked}" />
  </Style>

  <!-- CheckedPrimaryPressed State -->
